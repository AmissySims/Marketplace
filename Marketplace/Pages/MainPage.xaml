<Page x:Class="Marketplace.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marketplace.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Width="200" Margin="5">
            <Button x:Name="ProductBt" 
                    Content="Product" 
                    Click="ProductBt_Click"
                    Margin="5"/>
            <Button x:Name="OrdersBt" 
                    Content="Orders"
                    Click="OrdersBt_Click"
                    Margin="5"/>
            <Button x:Name="ProvidersBt" 
                    Content="Providers"
                    Click="ProvidersBt_Click"
                    Margin="5"/>
            <Button x:Name="TypesBt" 
                    Content="Types of products"
                    Click="TypesBt_Click"
                    Margin="5"/>
        </StackPanel>
        <Frame 
            Grid.Column="1"
            x:Name="MainFrame2" 
            NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
