<Page x:Class="Marketplace.Pages.AddEditTypePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marketplace.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditTypePage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Title"/>
            <TextBox x:Name="TitleTb" 
                     Text="{Binding Title}"
                     PreviewTextInput="TitleTb_PreviewTextInput"/>
            <Button x:Name="SaveBt" 
                    Content="Save"
                    Click="SaveBt_Click"/>
            <Button x:Name="CancelBt" 
                    Content="Cancel"
                    Click="CancelBt_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
