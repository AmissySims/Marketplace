<Page x:Class="Marketplace.Pages.AddEditProviderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marketplace.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditProviderPage">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Title"/>
            <TextBox x:Name="TitleTb" TextWrapping="Wrap" Text="{Binding Title}"/>
            <TextBlock Text="Adress"/>
            <TextBox x:Name="AdressTb" TextWrapping="Wrap" Text="{Binding Adress}"/>
            <Button x:Name="SaveTb"
                    Content="Save" Click="SaveTb_Click"/>
            <Button x:Name="CancelTb"
                    Content="Cancel" Click="CancelTb_Click"/>
        </StackPanel>
    </Grid>
</Page>
